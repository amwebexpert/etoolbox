{
  "typescript.tsdk": "node_modules/typescript/lib", // Use Typescript Version in the Workspace
  "npm.packageManager": "yarn", // Set to "npm" if you don't have yarn installed.
  "workbench.editor.labelFormat": "default", // Set to short if you want to see the foldername beside the filename in tabs
  "explorer.compactFolders": false, // New Folders and empty folders will always be expanded
  "debug.openExplorerOnEnd": true, // Whenever you stop the debug session, opens explorer view instead of staying in debug mode
  "problems.decorations.enabled": true, // Error highlighing in explorer view
  "files.autoSave": "off", // Just so that when you have the dev server running, any focus change will save -> recompile

  // Fomatting Settings.
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file"
}
